<Window
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.Shared.TargetOverlayWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:JocysCom.VS.AiCompanion.Engine.Controls.Shared"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="This"
	Title="TargetOverlayWindow"
	Margin="0"
	Padding="0"
	d:Height="32"
	d:Width="32"
	AllowsTransparency="True"
	Background="Transparent"
	Focusable="False"
	ResizeMode="NoResize"
	ShowInTaskbar="False"
	Topmost="True"
	WindowState="Normal"
	WindowStyle="None"
	mc:Ignorable="d">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../../Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Grid>
		<Border x:Name="TargetBorder" BorderBrush="Black" BorderThickness="2" />
		<ContentControl
			x:Name="TargetButton"
			Margin="0"
			Padding="0"
			Content="{StaticResource Icon_target}" />
	</Grid>
</Window>
