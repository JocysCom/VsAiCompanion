<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.PromptsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="This"
	mc:Ignorable="d">
	<Grid>
		<StackPanel Orientation="Horizontal">
			<ComboBox Name="PromptNameComboBox" ItemsSource="{Binding PromptNames, ElementName=This}" SelectedValue="{Binding _item.PromptName, ElementName=This}" />
			<ComboBox Name="PromptOptionComboBox" ItemsSource="{Binding PromptOptions, ElementName=This}" SelectedValue="{Binding _item.PromptOption, ElementName=This}" />
		</StackPanel>
	</Grid>
</UserControl>
