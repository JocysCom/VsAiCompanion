<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.Chat.ChatListControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	d:DesignHeight="270"
	d:DesignWidth="480"
	Background="White"
	Loaded="UserControl_Loaded"
	mc:Ignorable="d">
	<UserControl.InputBindings>
		<KeyBinding Key="C" Command="ApplicationCommands.Copy" Modifiers="Control" />
	</UserControl.InputBindings>
	<UserControl.CommandBindings>
		<CommandBinding CanExecute="CopyCommand_CanExecute" Command="ApplicationCommands.Copy" Executed="CopyCommand_Executed" />
	</UserControl.CommandBindings>
	<Grid>
		<Label
			x:Name="LoadingLabel"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
			Content="Loading. Please wait..."
			Foreground="DarkGray" />
		<WebBrowser x:Name="WebBrowser" Visibility="Hidden" />

	</Grid>
</UserControl>
