<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.FineTuningControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:JcConverters="clr-namespace:JocysCom.ClassLibrary.Controls.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:JocysCom.VS.AiCompanion.Engine.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="320"
	d:DesignWidth="600"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<JcConverters:BoolToVisibilityConverter x:Key="_BoolToVisibilityConverter" />
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Default.xaml" />
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="../Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<local:AiModelBoxControl x:Name="AiModelBoxPanel" Grid.Row="0" />
		<Grid Grid.Row="1" Margin="3,0,3,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Label VerticalAlignment="Center" Content="Data Folder" />
			<TextBox
				Name="DataFolderTextBox"
				Grid.Column="1"
				Margin="4,2,4,2"
				VerticalAlignment="Center"
				IsReadOnly="True" />
			<Button Name="OpenButton" Grid.Column="2" Click="OpenButton_Click">
				<StackPanel>
					<ContentControl Content="{StaticResource Icon_FolderOpen}" Focusable="False" />
					<Label Content="Open..." />
				</StackPanel>
			</Button>
			<!--  Row 1  -->
			<Label Grid.Row="1" VerticalAlignment="Center" Content="JSON File" />
			<TextBox
				Name="JsonFileTextBox"
				Grid.Row="1"
				Grid.Column="1"
				Margin="4,2,4,2"
				VerticalAlignment="Center"
				IsReadOnly="True"
				Text="data.json" />
			<StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
				<Button
					Name="ValidateButton"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					x:FieldModifier="public"
					Click="ValidateJsonButton_Click">
					<StackPanel>
						<ContentControl Content="{StaticResource Icon_OK}" Focusable="False" />
						<Label Content="Validate" />
					</StackPanel>
				</Button>
				<Button Name="ConvertToJsonlButton" Click="ConvertToJsonlButton_Click">
					<StackPanel>
						<ContentControl Content="{StaticResource Icon_Export}" Focusable="False" />
						<Label MinWidth="52" Content="To JSONL" />
					</StackPanel>
				</Button>

			</StackPanel>
			<!--  Row 2  -->
			<Label Grid.Row="2" VerticalAlignment="Center" Content="JSON Lines File" />
			<TextBox
				Name="JsonlFileTextBox"
				Grid.Row="2"
				Grid.Column="1"
				Margin="4,2,4,2"
				VerticalAlignment="Center"
				IsReadOnly="True"
				Text="data.jsonl" />
			<StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
				<Button
					Name="ValidateJsonlButton"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					x:FieldModifier="public"
					Click="ValidateJsonlButton_Click">
					<StackPanel>
						<ContentControl Content="{StaticResource Icon_OK}" Focusable="False" />
						<Label Content="Validate" />
					</StackPanel>
				</Button>
				<Button Name="ConvertToJsonButton" Click="ConvertToJsonButton_Click">
					<StackPanel>
						<ContentControl Content="{StaticResource Icon_Export}" Focusable="False" />
						<Label MinWidth="52" Content="To JSON" />
					</StackPanel>
				</Button>
			</StackPanel>
		</Grid>
		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button
				Name="UploadButton"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				x:FieldModifier="public"
				Click="UploadButton_Click">
				<StackPanel>
					<ContentControl Content="{StaticResource Icon_Export}" Focusable="False" />
					<Label Content="Upload" />
				</StackPanel>
			</Button>
			<Button
				Name="CreateModelButton"
				HorizontalAlignment="Right"
				VerticalAlignment="Top"
				x:FieldModifier="public"
				Click="CreateModel_Click">
				<StackPanel>
					<ContentControl Content="{StaticResource Icon_Add}" Focusable="False" />
					<Label Content="Create a fine-tuned model" />
				</StackPanel>
			</Button>
		</StackPanel>
		<Border
			Grid.Row="3"
			Grid.Column="0"
			VerticalAlignment="Stretch"
			Background="{StaticResource BackgroundLight}">
			<TextBox
				Name="LogTextBox"
				Margin="3"
				Padding="6"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch"
				Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
				BorderThickness="1"
				IsReadOnly="True"
				ScrollViewer.HorizontalScrollBarVisibility="Disabled"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				TextWrapping="Wrap">
				<TextBox.Resources>
					<Style TargetType="Border" />
				</TextBox.Resources>
			</TextBox>
		</Border>
		<TabControl
			x:Name="MainTabControl"
			Grid.Row="4"
			Margin="4"
			x:FieldModifier="public">
			<TabItem x:Name="FileListTabItem" x:FieldModifier="public">
				<TabItem.Header>
					<StackPanel Orientation="Horizontal">
						<ContentControl Content="{StaticResource Icon_Task}" />
						<Label Content="Uploaded Files" />
					</StackPanel>
				</TabItem.Header>
				<local:FileListControl x:Name="FileListPanel" />
			</TabItem>
		</TabControl>


	</Grid>
</UserControl>
