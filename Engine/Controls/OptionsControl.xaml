<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.OptionsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Controls="clr-namespace:JocysCom.ClassLibrary.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:JocysCom.VS.AiCompanion.Engine.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:root="clr-namespace:JocysCom.VS.AiCompanion.Engine"
	x:Name="This"
	Loaded="This_Loaded"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Default.xaml" />
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="../Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Margin="3,0,3,0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Label
				Grid.Row="0"
				Grid.Column="0"
				VerticalAlignment="Center"
				Content="Settings Folder" />
			<TextBox
				Name="SettingsFolderTextBox"
				Grid.Row="0"
				Grid.Column="1"
				VerticalAlignment="Center"
				IsReadOnly="True" />
			<Button
				Name="OpenButton"
				Grid.Row="0"
				Grid.Column="2"
				Click="OpenButton_Click">
				<StackPanel Focusable="False">
					<ContentControl Content="{StaticResource Icon_FolderOpen}" Focusable="False" />
					<Label Content="Open..." />
				</StackPanel>
			</Button>
		</Grid>
		<TabControl
			x:Name="AiServicesTabControl"
			Grid.Row="1"
			Margin="4"
			x:FieldModifier="public">
			<TabItem x:Name="AiServicesTabItem" x:FieldModifier="public">
				<TabItem.Header>
					<StackPanel Orientation="Horizontal">
						<ContentControl
							Width="12"
							Height="12"
							VerticalAlignment="Center"
							Content="{StaticResource Icon_cloud_gear}" />
						<Label Padding="4,0,0,0" VerticalAlignment="Center" Content="AI API Services" />
					</StackPanel>
				</TabItem.Header>
				<local:AiServiceControl x:Name="ItemPanel" x:FieldModifier="public" />
			</TabItem>
		</TabControl>

		<GroupBox Grid.Row="2" Margin="3,0,3,0" Header="Title for Attached Context">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label
					Grid.Row="0"
					Grid.Column="0"
					VerticalAlignment="Center"
					Content="Data" />
				<TextBox
					Name="ContextDataTitleTextBox"
					Grid.Row="0"
					Grid.Column="1"
					SpellCheck.IsEnabled="True"
					Text="{Binding ContextDataTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label
					Grid.Row="0"
					Grid.Column="2"
					VerticalAlignment="Center"
					Content="Files" />
				<TextBox
					Name="ContextFileTitleTextBox"
					Grid.Row="0"
					Grid.Column="3"
					SpellCheck.IsEnabled="True"
					Text="{Binding ContextFileTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label
					Grid.Row="1"
					Grid.Column="0"
					VerticalAlignment="Center"
					Content="Chat" />
				<TextBox
					Name="ContextChatTitleTextBox"
					Grid.Row="1"
					Grid.Column="1"
					SpellCheck.IsEnabled="True"
					Text="{Binding ContextChatTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label
					Grid.Row="2"
					Grid.Column="0"
					VerticalAlignment="Center"
					Content="Chat Instructions" />
				<TextBox
					Name="ContextChatInstructionsTextBox"
					Grid.Row="2"
					Grid.Column="1"
					Grid.ColumnSpan="3"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					VerticalContentAlignment="Top"
					AcceptsReturn="True"
					ScrollViewer.HorizontalScrollBarVisibility="Disabled"
					ScrollViewer.VerticalScrollBarVisibility="Auto"
					SpellCheck.IsEnabled="True"
					Text="{Binding ContextChatInstructions, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TextWrapping="Wrap" />
			</Grid>
		</GroupBox>
		<WrapPanel Grid.Row="3">
			<GroupBox Margin="3,0,3,3" Header="Standalone Progam">
				<WrapPanel Orientation="Vertical">
					<CheckBox Name="AppAlwaysOnTopCheckBox" Content="App Always on Top" IsChecked="{Binding AppAlwaysOnTop, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox
						Name="BarAlwaysOnTopCheckBox"
						Content="Bar Always on Top"
						IsChecked="{Binding BarAlwaysOnTop, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Visibility="Collapsed" />
					<CheckBox Name="MinimizeToTrayBox" Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="MinimizeOnCloseTrayBox" Content="Minimize on Close" IsChecked="{Binding MinimizeOnClose, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="AllowOnlyOneCopyBox" Content="Allow Only One Copy" IsChecked="{Binding AllowOnlyOneCopy, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<StackPanel Orientation="Horizontal">
						<CheckBox
							Name="StartWithWindowsBox"
							VerticalAlignment="Center"
							Content="Start with Windows"
							IsChecked="{Binding StartWithWindows, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
						<ComboBox
							Name="StartWithWindowsStateBox"
							MinWidth="75"
							HorizontalAlignment="Left"
							SelectedValue="{Binding StartWithWindowsState, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					</StackPanel>
				</WrapPanel>
			</GroupBox>
			<GroupBox Margin="0,0,3,3" VerticalAlignment="Top" Header="Reset Settings">
				<StackPanel>
					<Border Margin="3">
						<Button Name="ResetApplicationSettingsButton" Margin="0" Click="ResetApplicationSettingsButton_Click">
							<StackPanel Focusable="False">
								<ContentControl Content="{StaticResource Icon_Reset}" Focusable="False" />
								<Label Content="Reset Application Settings" />
							</StackPanel>
						</Button>
					</Border>
					<Border Margin="3">
						<Button
							Name="ResetTemplatesButton"
							Margin="0"
							HorizontalAlignment="Stretch"
							Click="ResetTemplatesButton_Click">
							<StackPanel HorizontalAlignment="Left" Focusable="False">
								<ContentControl Content="{StaticResource Icon_Reset}" Focusable="False" />
								<Label Content="Reset Templates Settings" />
							</StackPanel>
						</Button>
					</Border>
				</StackPanel>
			</GroupBox>
			<GroupBox Margin="0,0,3,3" Header="Sending Message">
				<WrapPanel VerticalAlignment="Top" Orientation="Vertical">
					<CheckBox Name="ShowDocumentsAttachedWarningCheckBox" Content="Show Documents Attached Warning" IsChecked="{Binding ShowDocumentsAttachedWarning, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="ShowSensitiveDataWarningCheckBox" Content="Show Sensitive Data Warning" IsChecked="{Binding ShowSensitiveDataWarning, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="UseEnterToSendMessageCheckBox" Content="Use [Enter] to send the message" IsChecked="{Binding UseEnterToSendMessage, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				</WrapPanel>
			</GroupBox>
			<GroupBox Margin="0,0,3,3" Header="Other">
				<WrapPanel VerticalAlignment="Top" Orientation="Vertical">
					<CheckBox Name="IsSpellCheckEnabledCheckBox" Content="Enable Spell Check" IsChecked="{Binding IsSpellCheckEnabled, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				</WrapPanel>
			</GroupBox>

		</WrapPanel>
	</Grid>
</UserControl>
