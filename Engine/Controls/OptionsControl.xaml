<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.OptionsControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:root="clr-namespace:JocysCom.VS.AiCompanion.Engine"
	Name="This"
	d:DesignHeight="640"
	d:DesignWidth="640"
	Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Default.xaml" />
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="../Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<GroupBox Grid.Row="0" Header="General" Margin="3,0,3,0">
			<Grid>


				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="Settings Folder" VerticalAlignment="Center" />
				<TextBox
					Name="SettingsFolderTextBox"
					Grid.Row="0"
					Grid.Column="1"
					IsReadOnly="True"
					VerticalAlignment="Center"
					/>
				<Button
					Name="OpenButton"
					Margin="0,0,3,0"
					Grid.Row="0"
					Grid.Column="2"
					Click="OpenButton_Click"
					Style="{StaticResource ToolBarButton}"
					VerticalAlignment="Center">
					<StackPanel Focusable="False" Style="{StaticResource ButtonStackPanel}">
						<ContentControl Content="{StaticResource Icon_FolderOpen}" Focusable="False" Style="{StaticResource ButtonContentControl}" />
						<Label Content="Open..." Style="{StaticResource ButtonLabel}" VerticalAlignment="Center" />
					</StackPanel>
				</Button>
				<Label Grid.Row="1" Grid.Column="0" Content="OpenAI API Key" VerticalAlignment="Center" />
				<PasswordBox Name="OpenAiApiSecretKeyPasswordBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" />

				<Label Grid.Row="2" Grid.Column="0" Content="OpenAI API Organization ID" VerticalAlignment="Center" />
				<PasswordBox Name="OpenAiApiOrganizationPasswordBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" />

				<Label Grid.Row="3" Grid.Column="0" Content="Open AI Base URL" VerticalAlignment="Center" />
				<TextBox
					Name="OpenAiBaseUrlTextBox"
					Grid.Row="3"
					Grid.Column="1"
					Grid.ColumnSpan="2"
					Text="{Binding OpenAiSettings.BaseUrl, ElementName=This}" />

				<Label Grid.Row="4" Grid.Column="0" Content="Model Filter" VerticalAlignment="Center" />
				<TextBox
					Name="ModelFilterTExtBox"
					Grid.Row="4"
					Grid.Column="1"
					Grid.ColumnSpan="2"
					Text="{Binding OpenAiSettings.ModelFilter, ElementName=This}" />
			</Grid>
		</GroupBox>
		<GroupBox Grid.Row="1" Margin="3,0,3,0" Header="Title for Attached Context">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="Data" VerticalAlignment="Center" />
				<TextBox
					Name="ContextDataTitleTextBox"
					Grid.Row="0"
					Grid.Column="1"
					Text="{Binding ContextDataTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label Grid.Row="0" Grid.Column="2" Content="Files" VerticalAlignment="Center" />
				<TextBox
					Name="ContextFileTitleTextBox"
					Grid.Row="0"
					Grid.Column="3"
					Text="{Binding ContextFileTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label Grid.Row="1" Grid.Column="0" Content="Chat" VerticalAlignment="Center" />
				<TextBox
					Name="ContextChatTitleTextBox"
					Grid.Row="1"
					Grid.Column="1"
					Text="{Binding ContextChatTitle, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				<Label Grid.Row="2" Grid.Column="0" Content="Chat Instructions" VerticalAlignment="Center" />
				<TextBox
					Name="ContextChatInstructionsTextBox"
					Grid.Row="2"
					Grid.Column="1"
					Grid.ColumnSpan="3"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch"
					VerticalContentAlignment="Top"
					AcceptsReturn="True"
					ScrollViewer.HorizontalScrollBarVisibility="Disabled"
					ScrollViewer.VerticalScrollBarVisibility="Auto"
					Text="{Binding ContextChatInstructions, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
					TextWrapping="Wrap" />
			</Grid>
		</GroupBox>
		<WrapPanel Grid.Row="2">
			<GroupBox Header="Standalone Progam" Margin="3,0,3,3">
				<WrapPanel Orientation="Vertical">
					<CheckBox Name="AppAlwaysOnTopCheckBox" Content="App Always on Top" IsChecked="{Binding AppAlwaysOnTop, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox
						Name="BarAlwaysOnTopCheckBox"
						Content="Bar Always on Top"
						IsChecked="{Binding BarAlwaysOnTop, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						Visibility="Collapsed" />
					<CheckBox Name="MinimizeToTrayBox" Content="Minimize to Tray" IsChecked="{Binding MinimizeToTray, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="MinimizeOnCloseTrayBox" Content="Minimize on Close" IsChecked="{Binding MinimizeOnClose, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="AllowOnlyOneCopyBox" Content="Allow Only One Copy" IsChecked="{Binding AllowOnlyOneCopy, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<StackPanel Orientation="Horizontal">
						<CheckBox Name="StartWithWindowsBox" Content="Start with Windows:" IsChecked="{Binding StartWithWindows, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
						<ComboBox
							Name="StartWithWindowsStateBox"
							MinWidth="75"
							HorizontalAlignment="Left"
							SelectedValue="{Binding StartWithWindowsState, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					</StackPanel>
				</WrapPanel>
			</GroupBox>
			<GroupBox VerticalAlignment="Top" Header="Reset Settings" Margin="0,0,3,3">
				<WrapPanel Orientation="Vertical">
					<Button
						Name="ResetApplicationSettingsButton"
						Margin="3"
						VerticalAlignment="Center"
						Click="ResetApplicationSettingsButton_Click"
						Style="{StaticResource ToolBarButton}">
						<StackPanel Focusable="False" Style="{StaticResource ButtonStackPanel}">
							<ContentControl Content="{StaticResource Icon_Reset}" Focusable="False" Style="{StaticResource ButtonContentControl}" />
							<Label Content="Reset Application Settings" Style="{StaticResource ButtonLabel}" />
						</StackPanel>
					</Button>
					<Button
						Name="ResetTemplatesButton"
						Margin="3,3,3,4"
						VerticalAlignment="Center"
						Click="ResetTemplatesButton_Click"
						Style="{StaticResource ToolBarButton}">
						<StackPanel Focusable="False" Style="{StaticResource ButtonStackPanel}">
							<ContentControl Content="{StaticResource Icon_Reset}" Focusable="False" Style="{StaticResource ButtonContentControl}" />
							<Label Content="Reset Templates Settings" Style="{StaticResource ButtonLabel}" />
						</StackPanel>
					</Button>
				</WrapPanel>
			</GroupBox>
			<GroupBox Header="Warnings" Margin="0,0,3,3">
				<WrapPanel VerticalAlignment="Top" Orientation="Vertical">
					<CheckBox Name="ShowDocumentsAttachedWarningCheckBox" Content="Show Documents Attached Warning" IsChecked="{Binding ShowDocumentsAttachedWarning, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
					<CheckBox Name="ShowSensitiveDataWarningCheckBox" Content="Show Sensitive Data Warning" IsChecked="{Binding ShowSensitiveDataWarning, Source={x:Static root:Global.AppSettings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
				</WrapPanel>
			</GroupBox>
		</WrapPanel>
	</Grid>
</UserControl>
