<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.AiServiceItemControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="This"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Default.xaml" />
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="../Resources/Icons/Icons_Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Label
			Grid.Row="0"
			Grid.Column="0"
			VerticalAlignment="Center"
			Content="Default AI Model" />
		<StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
			<ComboBox Name="ModelComboBox" ItemsSource="{Binding AiModels, ElementName=This}" SelectedValue="{Binding DefaultAiModel}" />
			<Button
				Name="ModelRefreshButton"
				Grid.Row="1"
				Grid.Column="3"
				Margin="3,0,3,0"
				VerticalAlignment="Center"
				Click="ModelRefreshButton_Click">
				<StackPanel>
					<ContentControl Content="{StaticResource Icon_Refresh}" Focusable="False" />
					<Label VerticalAlignment="Center" Content="Refresh" />
				</StackPanel>
			</Button>
			<CheckBox Checked="CheckBox_Checked" Content="Is Default AI Service" VerticalAlignment="Center" IsChecked="{Binding IsDefault}" />
		</StackPanel>
		<Label
			Grid.Row="1"
			Grid.Column="0"
			VerticalAlignment="Center"
			Content="OpenAI API Key" />
		<PasswordBox
			Name="SecretKeyPasswordBox"
			Grid.Row="1"
			Grid.Column="1"
			Grid.ColumnSpan="2" />

		<Label
			Grid.Row="2"
			Grid.Column="0"
			VerticalAlignment="Center"
			Content="OpenAI API Organization ID" />
		<PasswordBox
			Name="OrganizationPasswordBox"
			Grid.Row="2"
			Grid.Column="1"
			Grid.ColumnSpan="2" />

		<Label
			Grid.Row="3"
			Grid.Column="0"
			VerticalAlignment="Center"
			Content="Open AI Base URL" />
		<TextBox
			Name="OpenAiBaseUrlTextBox"
			Grid.Row="3"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			Text="{Binding BaseUrl}" />

		<Label
			Grid.Row="4"
			Grid.Column="0"
			VerticalAlignment="Center"
			Content="Model Filter" />
		<TextBox
			Name="ModelFilterTExtBox"
			Grid.Row="4"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			Text="{Binding ModelFilter}" />
	</Grid>
</UserControl>
