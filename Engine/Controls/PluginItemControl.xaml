<UserControl
	x:Class="JocysCom.VS.AiCompanion.Engine.Controls.PluginItemControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:JocysCom.VS.AiCompanion.Engine.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Icons.xaml" />
				<ResourceDictionary Source="../Resources/Icons/Icons_Default.xaml" />
				<ResourceDictionary Source="../JocysCom/Controls/Themes/Default.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<GroupBox Margin="3,0,3,3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<GroupBox.Header>
			<StackPanel Margin="0,4,4,4" Orientation="Horizontal">
				<CheckBox
					Name="UseMacrosCheckBox"
					Margin="-4"
					Content="Enable: "
					IsChecked="{Binding IsEnabled}" />
				<Label
					Name="NamespaceLabel"
					Margin="0"
					Padding="0"
					Content="{Binding Namespace}"
					FontWeight="Bold"
					Foreground="#000000" />
				<Label
					Name="NamesapceDotLabel"
					Margin="0"
					Padding="0"
					Content="."
					FontWeight="Bold"
					Foreground="#808080" />
				<Label
					Name="ClassLabel"
					Margin="0"
					Padding="0"
					Content="{Binding Class}"
					FontWeight="Bold"
					Foreground="#2B91AF" />
				<Label
					Name="ClassDotLabel"
					Margin="0"
					Padding="0"
					Content="."
					FontWeight="Bold"
					Foreground="#808080" />
				<Label
					Name="NameLabel"
					Margin="0"
					Padding="0"
					Content="{Binding Name}"
					FontWeight="Bold"
					Foreground="#74531F" />
			</StackPanel>
		</GroupBox.Header>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<ContentControl
				Name="RightIcon"
				Width="32"
				Height="32"
				Margin="4,4,8,4"
				Padding="0"
				VerticalAlignment="Top"
				Content="{StaticResource Icon_piece}" />
			<StackPanel Grid.Column="1" VerticalAlignment="Top">
				<TextBlock
					Name="AboutDescriptionLabel"
					Margin="0,0,4,4"
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					Text="{Binding Description}"
					TextWrapping="Wrap" />
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="Auto" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<ItemsControl
						x:Name="ParamsDataGrid"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
						ClipToBounds="True"
						ItemsSource="{Binding Params}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<StackPanel Grid.Row="{Binding Index}" Orientation="Horizontal">
									<Label
										Grid.Row="{Binding Index}"
										Grid.Column="0"
										Margin="24,0,0,0"
										Padding="0"
										Content="{Binding Type}"
										FontWeight="Bold"
										Foreground="#2B91AF" />
									<Label
										Grid.Row="{Binding Index}"
										Grid.Column="1"
										Margin="4,0,0,0"
										Padding="0"
										Content="{Binding Name}"
										FontWeight="Bold" />
									<Label
										Grid.Row="{Binding Index}"
										Grid.Column="2"
										Margin="4,0,0,0"
										Padding="0"
										Content="{Binding IsOptional}"
										FontWeight="Bold"
										Foreground="#808080" />
									<TextBlock
										Grid.Row="{Binding Index}"
										Grid.Column="3"
										Margin="4,0,0,0"
										Padding="0"
										HorizontalAlignment="Stretch"
										VerticalAlignment="Top"
										Text="{Binding Description}"
										TextWrapping="Wrap" />
								</StackPanel>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</Grid>
			</StackPanel>
		</Grid>
	</GroupBox>
</UserControl>
