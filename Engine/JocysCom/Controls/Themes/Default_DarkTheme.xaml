<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--  Colors for Dark Theme  -->

	<!--  Transparent Background (unchanged)  -->
	<SolidColorBrush x:Key="BackgroundTransparent" Color="Transparent" />

	<!--  Adjusted Backgrounds  -->
	<SolidColorBrush x:Key="BackgroundWhite" Color="#232323" />
	<!--  Originally white, now dark grey  -->
	<SolidColorBrush x:Key="BackgroundLight" Color="#3F3F46" />
	<!--  Light background in dark theme  -->
	<SolidColorBrush x:Key="BackgroundDark" Color="#2D2D30" />
	<!--  Darker background  -->
	<SolidColorBrush x:Key="BackgroundDarkSelected" Color="#3A80CC" />
	<!--  Selection background  -->
	<SolidColorBrush x:Key="BackgroundDarkPressed" Color="#404040" />
	<!--  Pressed background  -->

	<!--  Adjusted Special Backgrounds  -->
	<SolidColorBrush x:Key="BackgroundWarning" Color="#803333" />
	<!--  Warning background  -->
	<SolidColorBrush x:Key="BackgroundHelp" Color="#43434D" />
	<!--  Help background  -->

	<!--  Adjusted Borders  -->
	<SolidColorBrush x:Key="BorderDark" Color="#696969" />
	<!--  Border color  -->

	<!--  Adjusted Foregrounds  -->
	<SolidColorBrush x:Key="ForegroundBlack" Color="#FFFFFF" />
	<!--  Text foreground  -->
	<SolidColorBrush x:Key="ForegroundWarning" Color="#FF5555" />
	<!--  Warning text  -->

	<!--  Adjusted State Colors  -->
	<SolidColorBrush x:Key="ColorNormal" Color="#88C0D0" />
	<!--  Normal state  -->
	<SolidColorBrush x:Key="ColorActive" Color="#A3BE8C" />
	<!--  Active state  -->
	<SolidColorBrush x:Key="ColorOver" Color="#D08770" />
	<!--  Mouse over  -->
	<SolidColorBrush x:Key="ColorRecord" Color="#BF616A" />
	<!--  Record state  -->

	<!--  Adjusted SolidColorBrush_BFF  -->
	<SolidColorBrush x:Key="SolidColorBrush_BFF" Color="#FFFFFFFF" />
	<!--  Changed from black to white  -->

	<!--  Adjusted HUE Color Brushes  -->
	<!--  HUE Color Degrees - Light (dark shades for dark theme)  -->
