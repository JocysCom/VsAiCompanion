	<SolidColorBrush x:Key="SolidColorBrush_030L">#2E2A29</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_060L">#2E2E29</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_090L">#2A2E29</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_120L">#292E29</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_150L">#292E2A</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_180L">#292E2E</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_210L">#292A2E</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_240L">#2A292E</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_270L">#2E292E</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_300L">#2E292A</SolidColorBrush>
	<SolidColorBrush x:Key="SolidColorBrush_330L">#2E2929</SolidColorBrush>

	<!--  HUE Color Degrees - Dark (bright shades for dark theme)  -->
